<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivUserImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/tvUserTitle"
            android:layout_toRightOf="@id/ivUserImage"
            android:layout_toEndOf="@id/ivUserImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/ivDigImage"
            android:layout_toLeftOf="@+id/tvDigNum"
            android:layout_toStartOf="@+id/tvDigNum"
            android:src="@drawable/comment_like_icon_night"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/tvDigNum"
            android:gravity="center_horizontal"
            android:layout_width="30dp"
            android:layout_height="20dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvCommentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>