<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="32dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.zz.quicknews.activity.SearchActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivBack"
            android:background="@drawable/leftbackicon_titlebar_pressed"
            android:layout_gravity="center_horizontal"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edittext_normal"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ivSearchImage"
                android:src="@drawable/search_discover_normal"
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <EditText
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/etInput"
                android:background="@color/transparent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/ivClearText"
                android:paddingRight="5dp"
                android:src="@drawable/close_discover_pressed"
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvSearchEnsure"
            android:text="@string/search"
            android:textColor="@color/deepskyblue"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/darkgray2"
        android:layout_height="1dp"/>
    <ProgressBar
        android:layout_weight="1"
        android:id="@+id/pbSearchProgress"
        android:layout_gravity="center|bottom"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="30dp"/>
    <ListView
        android:layout_weight="1"
        android:id="@+id/lvSearchResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
